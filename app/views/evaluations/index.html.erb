<h1>Evaluaciones de <%= @course.name %> del a√±o  <%= @course.year %> </h1>

<table class="table table-bordered table-light gradesTable table-striped ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Min grade</th>
      <th>Date</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>
        
  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.title %></td>
        <td><%= evaluation.min_grade %></td>
        <td><%= evaluation.date %></td>
        <td><%= link_to 'Show', course_evaluation_path(@course,evaluation) %></td>
        <td><%= link_to 'Edit', edit_course_evaluation_path(@course,evaluation) %></td>
        <td><%= link_to 'Destroy', course_evaluation_path(@course,evaluation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

